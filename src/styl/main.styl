/*  Syntax Quick Reference for Jeet
    --------------------------
    column(ratios = 1, offset = 0, cycle = 0, uncycle = 0, gutter = jeet.gutter)
    span(ratio = 1, offset = 0)
    shift(ratios = 0, col_or_span = column, gutter = jeet.gutter)
    unshift()
    edit()
    center(max_width = 1410px, pad = 0)
    stack(pad = 0, align = false)
    unstack()
    align(direction = both)
    cf()

    For more info see:
        Kouto Swiss Doc: http://kouto-swiss.io/
        Jeet Doc: http://jeet.gs

    And of course, look in node_modules for axis-css and jeet
*/

@import "kouto-swiss"
@import "jeet"

normalize()

@import "generics/fonts"
@import "generics/icons"

@import "components/slideshow"
@import "circle-progress"

body
    font-family: 'DroidSans'
    //background: url('/assets/img/bg.png'),
    //linear-gradient(to right, rgba(7,85,121,1) 0%,
    //rgba(7,137,121,1) 51%, rgba(7,85,121,1) 100%)

ul li
    list-style: none
img
    max-width: 100%

.container
    center(960px)

.header
    col(1)

.logo
    margin: 0
    display: inline-block
    max-width: 7em
    max-height: 3em
    a
        font-size: 0

.main-menu
    margin: 0
    display: inline-block
    float: right
    li
        float: right
        margin: 0
        width: 5em
    a
        text-align: center
        padding: .8em 0
    i
        font-size: 2em
        line-height: 1em
        display: block

.tip-subject
    col(1/3, 1/9)
    text-align: center

#wizard
	clearfix()

.banner-com-titulo
	col(1)

#footer-brasil
    background: none repeat scroll 0% 0% #2c66ce
    padding: 1em 0px
    max-width: 100%
