normalize()

@import "generics/fonts"
@import "generics/icons"

@import "components/slideshow"
@import "circle-progress"

amarelo = #FBED1D
cad-amarelo  = #F7C908
cad-azul     = #075579
cad-vermelho = #D82E5F
cad-verde    = #417034
cad-laranja  = #F7931E
cad-roxo     = #7B4AAF

html,
body
    font-size: 14px

body
    font-family: 'DroidSans'
    background: url('/assets/img/bg.png'), linear-gradient(to right, rgba(7,85,121,1) 0%, rgba(7,137,121,1) 51%, rgba(7,85,121,1) 100%)
p
    color: #fff

.button
    color: #078979
    border-radius: .5em
    font-weight: bold

.logo
    margin: .4em 0
    font-size: 0
    max-width: 10em
    max-height: 1em
    a
        color: #F7931E
.main-menu
    margin: 0
    border-right: 1px solid #E2D02B
    li
        float: right
        margin: 0
        width: 5em
    a
        text-align: center
        padding: .8em 0
        border-left: 1px solid #E2D02B
        &:hover
            color: #078979
    i
        font-size: 2em
        line-height: 1em
        display: block
h1,
h2,
h3,
h4,
h5,
h6
    font-family: 'DroidSans'
    color: amarelo
    font-weight: bold
    margin: .8em 0

.featured-text,
.tip-subject
    margin-top: 3em
    img
        min-height: 5em

.criterio-featured
    h4 i
        display: block
        font-size: 1.5em
.menu-criterios
    margin: 0 auto
    display: inline-block
    li
        border-top: 5px solid amarelo
        margin: 0
        padding: .8em
        &.selected
            border-color: #F7931E
            i
                color: #F7931E
        a
            font-size: 1.2em



.box-status-cadastro
    .head
        padding: 1em 2em
        background: cad-amarelo
        color: #fff
        position: relative
        i
            font-size: 2em
        h4
            color: #fff
            margin: 0
        .action-open-form
            background: #078979
            color: #fff
            font-weight: bold
            padding: .3em 0
            text-align: center
            position: absolute
            right: 1em
            bottom: -1em
            z-index: 9
            border-radius: 1em
            width: 2em
            height: 2em
            display: block
            box-shadow: .2em .2em .5em #ccc

.content
    padding: 1em 2em
    background: #fff
    p
        margin: 0
        color: #808080
    a
        font-weight: bold
        color: #078979
        text-decoration: underline


#footer-brasil
    background: none repeat scroll 0% 0% #2c66ce
    padding: 1em 0px
    max-width: 100%
