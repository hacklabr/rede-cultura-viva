/*  Syntax Quick Reference for Jeet
    --------------------------
    column(ratios = 1, offset = 0, cycle = 0, uncycle = 0, gutter = jeet.gutter)
    span(ratio = 1, offset = 0)
    shift(ratios = 0, col_or_span = column, gutter = jeet.gutter)
    unshift()
    edit()
    center(max_width = 1410px, pad = 0)
    stack(pad = 0, align = false)
    unstack()
    align(direction = both)
    cf()

    For more info see:
        Kouto Swiss Doc: http://kouto-swiss.io/
        Jeet Doc: http://jeet.gs

    And of course, look in node_modules for axis-css and jeet
*/
@import "kouto-swiss"
//@import "jeet"

normalize()

@import "foundation"
@import "icons"
@import "slideshow"

font-face( "DroidSans", "/fonts/DroidSans-webfont", normal )
font-face( "DroidSans", "/fonts/DroidSans-Bold-webfont", bold )

amarelo = #f7c908

h2,
h3
    color: amarelo

body
    font-family: 'DroidSans'
    background: rgba(7,85,121,1)
    background-image: url('/img/bg.png'), linear-gradient(to right, rgba(7,85,121,1) 0%, rgba(7,137,121,1) 51%, rgba(7,85,121,1) 100%)

#footer-brasil
    background: none repeat scroll 0% 0% #2c66ce
    padding: 1em 0px
    max-width: 100%

.box-menu
    background-color: #FFEC61
    border-top: 4px solid #075579
    .action-secondary-menu
        font-size: 1.5em
        i
            line-height: 3em
    .logo
        margin: 0
        font-size: 1em
        max-width: 10em
    a
        color: #F7931E
    .main-menu
        margin: 0
        border-right: 1px solid #E2D02B
        li
            float: right
            margin: 0
            width: 5em
        a
            text-align: center
            padding: .5em 0
            border-left: 1px solid #E2D02B
            &:hover
                color: #078979
        i
            font-size: 2em
            line-height: 1em
            display: block

